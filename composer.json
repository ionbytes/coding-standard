{
  "name": "ionbytes/coding-standard",
  "description": "IonBytes Coding Standard",
  "license": "MIT",
  "type": "phpcodesniffer-standard",
  "keywords": [
    "static analysis",
    "standards",
    "phpcs"
  ],
  "support": {
    "issues": "https://github.com/ionbytes/coding-standard/issues",
    "source": "https://github.com/ionbytes/coding-standard"
  },
  "require": {
    "php": ">=8.1",
    "dealerdirect/phpcodesniffer-composer-installer": "dev-master",
    "squizlabs/php_codesniffer": "^4.0.x-dev"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master"
  },
  "minimum-stability": "dev",
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true
  }
}
